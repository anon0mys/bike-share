<%= form_for [:admin, @trip] do |f| %>
  <div class=''>
    <%= f.label :duration %>
    <%= f.number_field :duration, min: 0 %>
  </div>

  <div class=''>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class=''>
    <%= f.label :start_station_id %>
    <%= f.collection_select :start_station_id, @stations, :id, :name %>
  </div>

  <div class=''>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class=''>
    <%= f.label :end_station_id %>
    <%= f.collection_select :end_station_id, @stations, :id, :name %>
  </div>

  <div class=''>
    <%= f.label :bike_id %>
    <%= f.number_field :bike_id, min: 1 %>
  </div>

  <div class=''>
    <%= f.label :subscription_type %>
    <%= f.select :subscription_type, options_for_select(['Customer', 'Subscriber']) %>
  </div>

  <div class=''>
    <%= f.label :zip_code %>
    <%= f.number_field :zip_code %>
  </div>

  <div class=''>
    <%= f.submit %>
  </div>
<% end %>
