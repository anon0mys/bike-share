<div class="container-fixed">
  <div class="row">
    <div class="col-4">
      <h3><%= @station.name %></h3>

      <p>Dock Count:</strong> <%= @station.dock_count %>
      <p>City:</strong> <%= @station.city %>
      <p>Installation Date:</strong> <%= @station.installation_date %>

      <% if current_admin? %>
        <div class="buttons">
          <%= button_to 'New', new_admin_station_path, method: 'get' %>
          <%= button_to 'Edit', edit_admin_station_path(@station), method: 'get' %>
          <%= button_to 'Delete', admin_station_path(@station), method: 'delete' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
