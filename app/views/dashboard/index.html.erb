<h1>Dashboard</h1>

<% if current_user %>
  <ul>
    <li>Name: <%= @user.name %></li>
    <li>Username: <%= @user.username %></li>
  </ul>
  <%= link_to "Update Profile Information", edit_user_path(@user) %>
  <% @user.orders.each do |order| %>
    <%= link_to "Order \##{order.id}", order_path(order) %>
  <% end %>
<% end %>
