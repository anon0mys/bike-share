<div class="container-fixed">
  <div class="row">
    <div class="col-4">
      <h3>The following information is for the trip starting at <%= @trip.start_date %> at <%= @trip.start_station.name %></h3>

      <p>Duration: <%= @trip.duration %></p>
      <p>Start Date: <%= @trip.start_date %></p>
      <p>Start Station: <%= @trip.start_station.name %></p>
      <p>End Date: <%= @trip.end_date %></p>
      <p>End Station: <%= @trip.end_station.name %></p>
      <p>Bike ID: <%= @trip.bike_id %></p>
      <p>Subscription Type: <%= @trip.subscription_type %></p>
      <p>Zip Code: <%= @trip.zip_code %></p>

      <% if current_admin? %>
        <div class="buttons">
          <%= button_to 'New', new_admin_trip_path, method: 'get' %>
          <%= button_to 'Edit', edit_admin_trip_path(@trip), method: 'get' %>
          <%= button_to 'Delete', admin_trip_path(@trip), method: 'delete' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
