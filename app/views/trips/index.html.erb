<div class="container-fixed">
  <div class="row">
    <div class="col-10">
      <table>
        <tr class="table-background">
          <th>Trip ID</th>
          <th>Duration</th>
          <th>Start Date</th>
          <th>Start Station</th>
          <th>End Date</th>
          <th>End Station</th>
          <th>Bike ID</th>
          <th>Subscription Type</th>
          <th>Zip Code</th>
        </tr>
        <% @trips.each do |trip| %>
          <tr data-href="<%= trip_path(trip) %>">
            <td><a href="<%= trip_path(trip) %>"><%= trip.id %></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.duration %></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.start_date %></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.start_station.name %></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.end_date %></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.end_station.name%></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.bike_id %></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.subscription_type %></a></td>
            <td><a href="<%= trip_path(trip) %>"><%= trip.zip_code %></a></td>
            <% if current_admin? %>
              <td><%= button_to 'Edit', edit_admin_trip_path(trip), method: 'get', title: "#{trip.id} edit"  %></td>
              <td><%= button_to 'Delete', admin_trip_path(trip), method: 'delete', title: "#{trip.id} delete" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <% @pages.times do |n| %>
        <%= link_to (n + 1).to_s, trips_path(offset: n) %>
      <% end %>
    </div>
  </div>
</div>
