<div class="container-fixed">
  <% if current_admin? %>
  <div class="row">
    <%= button_to 'New Trip', new_admin_trip_path, method: 'get', class: 'create-button' %>
  </div>
  <% end %>
  <div class="row">
    <div class="col-10">
      <table>
        <tr class="table-background">
          <th>Trip ID</th>
          <th>Duration</th>
          <th>Start Date</th>
          <th>Start Station</th>
          <th>End Date</th>
          <th>End Station</th>
          <th>Bike ID</th>
          <th>Subscription Type</th>
          <th>Zip Code</th>
          <% if current_admin? %>
            <th></th>
            <th></th>
          <% end %>
        </tr>
        <% @trips.each do |trip| %>
          <tr>
            <td><%= link_to trip.id, trip_path(trip) %></td>
            <td><%= trip.duration %></td>
            <td><%= trip.start_date %></td>
            <td><%= link_to trip.start_station.name, station_path(trip.start_station.slug) %></td>
            <td><%= trip.end_date %></td>
            <td><%= link_to trip.end_station.name, station_path(trip.end_station.slug) %></td>
            <td><%= trip.bike_id %></td>
            <td><%= trip.subscription_type %></td>
            <td><%= trip.zip_code %></td>
            <% if current_admin? %>
              <td><%= button_to 'Edit', edit_admin_trip_path(trip), method: 'get', title: "#{trip.id} edit"  %></td>
              <td><%= button_to 'Delete', admin_trip_path(trip), method: 'delete', title: "#{trip.id} delete" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <div class="pagination">
        <% @pages.times do |n| %>
          <%= link_to (n + 1).to_s, trips_path(offset: n) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
