<div class="container-fixed">
  <div class="row">
    <div class="col-10">
      <table>
        <tr class="table-background">
          <th>Trip ID</th>
          <th>Duration</th>
          <th>Start Date</th>
          <th>Start Station</th>
          <th>End Date</th>
          <th>End Station</th>
          <th>Bike ID</th>
          <th>Subscription Type</th>
          <th>Zip Code</th>
        </tr>
        <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.id %></td>
          <td><%= trip.duration %> </td>
          <td><%= trip.start_date %> </td>
          <td><%= trip.start_station.name %> </td>
          <td><%= trip.end_date %> </td>
          <td><%= trip.end_station.name%> </td>
          <td><%= trip.bike_id %> </td>
          <td><%= trip.subscription_type %> </td>
          <td><%= trip.zip_code %> </td>
          <% if current_admin? %>
            <td><%= button_to 'Edit' %></td>
            <td><%= button_to 'Delete' %></td>
          <% end %>
        </tr>
        <% end %>
      </table>
      <% @pages.times do |n| %>
        <%= link_to (n + 1).to_s, trips_path(offset: n) %>
      <% end %>
    </div>
  </div>
</div>
