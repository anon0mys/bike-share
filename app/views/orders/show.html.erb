<p>Order Status: <%= @order.status %></p>
<p>Submitted on: <%= @order.created_at %></p>
<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Subtotal</th>
  </tr>
  <% @order.items.map do |item| %>
    <tr>
      <td>
        <div class="table-image">
          <%= image_tag asset_path (item.image) %>
        </div>
      </td>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= "$#{'%.2f' % item.price}" %></td>
      <td><%= @order.item_quantity(item) %></td>
      <td><%= "$#{'%.2f' % @order.item_subtotal(item)}" %></td>
    </tr>
  <% end %>
</table>
<h3>Total: <%= "$#{'%.2f' % @order.total }" %></h3>
